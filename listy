ZADANIE 1

using System;
using System.Collections.Generic;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int> {2, 1012, 111, 100, 214};
        foreach (var liczba in listaLiczb)
            {
                Console.WriteLine(liczba);
            }
    }
}


ZADANIE 2

using System;
using System.Collections.Generic;


public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int>();
        
        
        for(int i = 0; i < 5; i++)
        {
            Console.WriteLine("Podaj liczbe ktora chcesz dodac do listy");
            int liczba = int.Parse(Console.ReadLine());
            listaLiczb.Add(liczba);
        }
        
        Console.WriteLine($"Elementy listy: ");
        foreach (var elementy in listaLiczb)
        {
            Console.WriteLine(elementy);
        } 
    }
}


ZADANIE 3

using System;
using System.Collections.Generic;


public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int>();
        
        
        for(int i = 0; i < 5; i++)
        {
            Console.WriteLine("Podaj liczbe ktora chcesz dodac do listy");
            int liczba = int.Parse(Console.ReadLine());
            listaLiczb.Add(liczba);
        }
        
        int suma;
        suma = listaLiczb[0] + listaLiczb[1] + listaLiczb[2] + listaLiczb[3] + listaLiczb[4];
        Console.WriteLine($"Suma elementow tablicy to: {suma}");
        
    }
}


ZADANIE 4

using System;
using System.Collections.Generic;


public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int>();
        
        
        for(int i = 0; i < 5; i++)
        {
            Console.WriteLine("Podaj liczbe ktora chcesz dodac do listy");
            int liczba = int.Parse(Console.ReadLine());
            listaLiczb.Add(liczba);
        }
        listaLiczb.Sort();
        Console.WriteLine($"Najmniejszy element listy to {listaLiczb[0]}");
        Console.WriteLine($"Najwiekszy element listy to {listaLiczb[^1]}");
    }
}


ZADANIE 5

using System;
using System.Collections.Generic;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int> {1, 100, 44, -100, 99, 45, 12, -46, 0};
        Console.WriteLine("Wprowadz liczbe");
        int input = int.Parse(Console.ReadLine());
        Console.WriteLine("Elementy listy, ktore sa wieksze od wprowadzonej liczby: ");
        int suma = 0;
        
        foreach (int liczba in listaLiczb)
        {
            if(liczba > input)
            {
                Console.WriteLine(liczba);
                suma++;
            }
        }
        Console.WriteLine($"Ilosc liczb, ktore sa wieksze od podanej liczby: {suma}");
    }
}


ZADANIE 6

using System;
using System.Collections.Generic;


public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int> {-42, 100, 1298, -14325, 3, 593, 12, -467, 0, -1200000};
       // int index = listaLiczb[i]
        
        for(int i = 0; i < listaLiczb.Count; i++)
        {
            if(listaLiczb[i] < 0)
            {
                listaLiczb.RemoveAt(i);
                i--;
            }
        }
        Console.WriteLine("Lista bez liczb ujemnych: ");
        foreach(var liczba in listaLiczb)
        {
            Console.WriteLine(liczba);
        }
    }
}


