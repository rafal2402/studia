            {
                Console.WriteLine("Podaj numer zadania do oznaczenia jako wykonane: ");
                Console.ReadLine();
            }
            else if(wybor == "5")
            {
                Console.WriteLine("Do zobaczenia!");
                break;
            }
            else
            {
                Console.WriteLine("Nieprawidlowa opcja. Prosze wybrac ponownie.");
            }
        }

        
