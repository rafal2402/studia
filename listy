using System;
using System.Collections.Generic;


public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int> {100, 1298, -14325, 3, 593, 12, -467, 0, -1200000};
        listaLiczb.Sort();
        
        foreach(var liczba in listaLiczb)
        {
            Console.WriteLine(liczba);
        }
    }
}


ZADANIE 8

using System;
using System.Collections.Generic;


public class HelloWorld
{
    public static void Main(string[] args)
    {
        List<int> listaLiczb = new List<int> {100, 129, -143, 3, 59, 12, 52, 0, -120, 89, 100 -10, 17, 21, 96};
        Console.WriteLine("Podaj liczbe, zeby sprawdzic czy znajduje sie na liscie.");
        int input = int.Parse(Console.ReadLine());
        
        if(listaLiczb.Contains(input))
        {
            int index = listaLiczb.IndexOf(input);
            Console.WriteLine($"Podana liczba znajduje sie na liscie. Jej indeks to {index}");
        }
        else
        {
            Console.WriteLine("Liczby nie ma na liscie.");
        }
    }
}


